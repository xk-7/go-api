    "paths": {
        "/copy": {
            "post": {
                "description": "将构建文件复制到服务器",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "deployment"
                ],
                "summary": "部署文件到服务器",
                "parameters": [
                    {
                        "type": "string",
                        "description": "服务器 IP 列表，以逗号分隔",
                        "name": "serverIps",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "构建目录",
                        "name": "buildDir",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "构建命令",
                        "name": "buildCommand",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "构建输出目录",
                        "name": "buildOutputDir",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "目标路径，默认值为 /home/sqray/cultures",
                        "name": "destinationPath",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Files copied successfully",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid input",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
